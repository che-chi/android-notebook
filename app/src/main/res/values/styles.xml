<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="actionMenuTextColor">#ffffff</item>
    </style>

    <style name="ActionBar" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="splash" parent="@style/Theme.Design.NoActionBar">
        <item name="android:windowBackground">@drawable/layer_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
